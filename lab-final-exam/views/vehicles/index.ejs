<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Vehicles</h2>
        <span class="text-muted"><%= vehicles.length %> vehicles found</span>
    </div>

    <% if (vehicles.length === 0) { %>
        <div class="text-center py-5">
            <i class="fas fa-car fa-3x text-muted mb-3"></i>
            <h4>No vehicles found</h4>
            <p class="text-muted">Please check back later.</p>
        </div>
    <% } else { %>
        <div class="row g-4">
            <% vehicles.forEach(vehicle => { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <img src="<%= vehicle.image %>" alt="<%= vehicle.name %>" class="card-img-top" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title"><%= vehicle.name %></h5>
                            <h6 class="card-subtitle mb-2 text-muted"><%= vehicle.brand %> - <%= vehicle.type %></h6>
                            <p class="card-text fw-bold text-primary">$<%= vehicle.price %></p>
                        </div>
                        <div class="card-footer">
                             <a href="#" class="btn btn-primary w-100">View Details</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>
</div> 